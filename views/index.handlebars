<h1>Burgers</h1>

<h2>Uneaten burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>


<h2>Add a burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Eaten?</label><br>
        <input type="radio" name="devoured" value="1" id="eaten" checked> Sleepy!<br>
        <input type="radio" name="devoured" value="0" id="uneaten"> Awake 
    </div>

    <button type="submit">Add Burger</button>
</form>