

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <ul class="list-group todo-list">
                <li class="list-group-item new-item">
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <h2>Uneaten burgers</h2>
                                <ul>
                                    {{#each burgers}}
                                    {{#unless devoured}}
                                    {{> burgers/burger-block devoured=true}}
                                    {{/unless}}
                                    {{/each}}
                                </ul>
                            </div>

                            <div class="col-6">
                                <h2>Eaten Burgers</h2>
                                <ul>
                                    {{#each burgers}}
                                    {{#if devoured}}
                                    {{> burgers/burger-block devoured=false}}
                                    {{/if}}
                                    {{/each}}
                                </ul>
                            </div>
                        </div>

                        <form id="create-form">
                            <div class="container">
                                <div class="row">
                                    <div class="col-9">
                                        <input class="new-item form-control" id="ca" name="name"
                                            placeholder="Add a burger" type="text" />
                                    </div>
                                    <div class="col-3">
                                        <button type="submit" class="btn btn-success">Add Burger</button>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </li>
                <span class="todo-container">
                </span>
            </ul>
        </div>
    </div>
</div>